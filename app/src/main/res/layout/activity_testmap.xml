<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/high_bg"
    android:orientation="vertical"
    tools:context=".TestmapActivity">

    <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:name="com.google.android.gms.maps.MapFragment"
        map:cameraTargetLat="37.541"
        map:cameraTargetLng="126.986"
        map:cameraZoom="15"/>

    <TextView
        android:id="@+id/txtCoordinates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/marginDefault"
        android:textColor="#ffffff"
        android:textSize="@dimen/txtSizeDefault"/>

    <Button
        android:id="@+id/btnGetCoordinates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Coordinates"/>

    <Button
        android:id="@+id/btnLocationUpdates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Tracking"/>



</LinearLayout>