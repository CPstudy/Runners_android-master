<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gbg"
    android:orientation="vertical"
    tools:context="com.guk2zzada.runnerswar.ModeSingleActivity">

    <LinearLayout
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/marginDefault"
        android:background="@drawable/gbg_frame_idcard"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rect_gray"
            android:gravity="center"
            android:padding="@dimen/marginSmall"
            android:text="MULTI PLAY"
            android:textColor="@color/colorText"
            android:textSize="@dimen/txtSizeMedium"
            android:textStyle="bold" />

        <com.guk2zzada.runnerswar.LineChart
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/marginDefault"
            android:padding="@dimen/marginDefault"
            android:background="@drawable/gbg_graph_blue"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:stretchColumns="0, 1">

            <TableRow
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="850kcal"
                        android:textColor="@color/colorTextGray"
                        android:textSize="@dimen/txtSizeLarge"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="오늘"
                        android:textColor="@color/colorTextGray"
                        android:textSize="@dimen/txtSizeDefault"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4500kcal"
                        android:textColor="@color/colorTextGray"
                        android:textSize="@dimen/txtSizeLarge"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이번주"
                        android:textColor="@color/colorTextGray"
                        android:textSize="@dimen/txtSizeDefault"/>

                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="450kcal"
                        android:textColor="@color/colorTextGray"
                        android:textSize="@dimen/txtSizeLarge"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="저번주"
                        android:textColor="@color/colorTextGray"
                        android:textSize="@dimen/txtSizeDefault"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4050kcal"
                        android:textColor="@color/colorTextGray"
                        android:textSize="@dimen/txtSizeLarge"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="저번주 목표"
                        android:textColor="@color/colorTextGray"
                        android:textSize="@dimen/txtSizeDefault"/>

                </LinearLayout>

            </TableRow>

        </TableLayout>

        <Button
            android:id="@+id/btnStart"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/marginDefault"
            android:background="@drawable/btn_white"
            android:text="시작"
            android:textColor="@color/colorAccent"/>

    </LinearLayout>

</LinearLayout>
