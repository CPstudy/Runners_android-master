<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:st="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootToast"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/marginSmall"
    android:background="@drawable/gbg_toast_pruple">

    <com.guk2zzada.runnerswar.StrokeTextView
        android:id="@+id/txt_toast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/txtSizeDefault"
        android:textColor="@color/colorText"
        st:textStroke="true"
        st:textStrokeWidth="1.0"
        st:textStrokeColor="@color/colorPrimaryDark"/>

</LinearLayout>
